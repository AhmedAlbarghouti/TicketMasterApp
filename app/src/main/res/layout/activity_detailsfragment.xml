<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Background"
    tools:context=".TicketMasterEventDetailsFragment">

    <ImageView
        android:id="@+id/eventImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />


    <TextView
        android:background="@color/Toolbar"
        android:id="@+id/eventName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/eventImage"
        android:textAlignment="center"
        />

    <TextView
        android:background="@color/Toolbar"
        android:id="@+id/eventDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/eventName"
        android:textAlignment="center"
        />
    <TextView
        android:background="@color/Toolbar"
        android:id="@+id/eventPrice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/eventDate"
        android:textAlignment="center"
        />





    <TextView
        android:background="@color/Toolbar"
        android:id="@+id/eventUrl"
        android:layout_below="@id/eventPrice"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>










    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        >


        <ImageButton
            android:id="@+id/urlButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_open_browser_foreground"
            />


        <ImageButton
            android:id="@+id/addEventToFavoritesButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_favorite_border_24"
            />

    </LinearLayout>


</RelativeLayout>